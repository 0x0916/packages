all:
		./mkversion
		cd module; make
		cd daemon; make

install:	module/netatop.ko daemon/netatopd
		install -d $RPM_BUILD_ROOT/lib/modules/${KSRC}/extra
		install -m 0644 module/netatop.ko -t $RPM_BUILD_ROOT/lib/modules/${KSRC}/extra
		depmod
		install daemon/netatopd -t $RPM_BUILD_ROOT/usr/sbin
		# install -T -m 0755 netatop.init /etc/init.d/netatop
		install man/netatop.4 -t $RPM_BUILD_ROOT/usr/share/man/man4
		install man/netatopd.8 -t $RPM_BUILD_ROOT/usr/share/man/man8

clean:
		cd module; make clean
		cd daemon; make clean
